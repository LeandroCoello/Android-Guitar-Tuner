                android:textStyle="normal|bold" />

            <TextView
                android:text="2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2B"
                android:layout_alignBaseline="@+id/textView3G"
                android:layout_alignBottom="@+id/textView3G"
                android:layout_alignLeft="@+id/secondString"
                android:layout_alignStart="@+id/secondString"
                android:textStyle="normal|bold" />

            <TextView
                android:text="1E"
                android:layout_width="wrap_content"
