                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/bemol"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignTop="@+id/frameBemol"
                android:layout_alignLeft="@+id/frameBemol"
                android:layout_alignStart="@+id/frameBemol"
                android:layout_alignBottom="@+id/frameBemol"/>

