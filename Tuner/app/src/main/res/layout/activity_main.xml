<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wood_wallpaper_12801">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLay"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Six Strings\nGuitar"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/sixSButton"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:onClick="startSixSGuitarTuner"
                android:textAppearance="@style/TextAppearance.AppCompat"
                style="@android:style/Widget.Holo.Light.Button"
                android:textAlignment="center" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Eight Strings\nGuitar"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/eigthSButton"
                android:onClick="startEightSGuitarTuner"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat"
                style="@android:style/Widget.Holo.Light.Button" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Four Strings Bass"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/fourBassButton"
                android:onClick="startFourSBassTuner"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat"
                style="@android:style/Widget.Holo.Light.Button" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Six Strings Bass"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/sixBassButton"
                android:onClick="startSixSBassTuner"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat"
                style="@android:style/Widget.Holo.Light.Button" />


        </RelativeLayout>

    </LinearLayout>
