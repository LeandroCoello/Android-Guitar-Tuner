                android:layout_alignLeft="@+id/frameForthS"
                android:layout_alignStart="@+id/frameForthS" />

            <TextView
                android:text="3G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3G"
                android:textStyle="normal|bold"
                android:layout_alignBottom="@+id/textView6E"
                android:layout_alignRight="@+id/frameThirdS"
                android:layout_alignEnd="@+id/frameThirdS" />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/checkbox_off_background"
                android:id="@+id/frameNote"
                android:scaleX="3"
                android:scaleY="3"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textFr"
                android:layout_alignLeft="@+id/frameNote"
                android:layout_alignStart="@+id/frameNote"
                android:layout_centerVertical="true"
                android:textSize="65sp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_weight="0.48">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/btn_radio_on_focused_holo_light"
                android:id="@+id/frameOK"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/ok"
                android:layout_alignStart="@+id/ok" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/btn_radio_on_holo_light"
                android:id="@+id/ok"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_find_previous_holo_light"
                android:id="@+id/imageView9"
                android:layout_below="@+id/frameOK"
                android:layout_alignLeft="@+id/frameOK"
                android:layout_alignStart="@+id/frameOK" />

            <TextView
                android:text="â™­"
