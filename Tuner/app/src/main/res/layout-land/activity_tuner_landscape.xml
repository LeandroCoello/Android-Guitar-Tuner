<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wood_wallpaper_12801">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Start Tuning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startButton"
                android:onClick="startRecording"
                android:textAppearance="@style/TextAppearance.AppCompat"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/centerPoint"
                android:layout_marginRight="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/centerPoint"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <Button
                android:text="Stop Tuning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stopButton"
                android:onClick="stopRecording"
                android:textAppearance="@style/TextAppearance.AppCompat"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/centerPoint"
                android:layout_marginLeft="25dp"
                 />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rLayout3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_notification_overlay"
                android:id="@+id/frameFirstS"
                android:tint="@color/colorPrimaryDark"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_alignParentTop="true"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/frameSecondS"
                android:layout_marginLeft="22dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/firstString"
                android:tint="@color/colorGrayLight"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_marginTop="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/frameFirstS"
                android:layout_alignStart="@+id/frameFirstS" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_notification_overlay"
                android:id="@+id/frameSecondS"
                android:tint="@color/colorPrimaryDark"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/frameThirdS"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/secondString"
                android:tint="@color/colorGrayLight"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/frameSecondS"
                android:layout_alignStart="@+id/frameSecondS"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_notification_overlay"
                android:id="@+id/frameThirdS"
                android:tint="@color/colorPrimaryDark"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/frameNote"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/thirdString"
                android:tint="@color/colorGrayLight"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/frameThirdS"
                android:layout_alignStart="@+id/frameThirdS"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_notification_overlay"
                android:id="@+id/frameForthS"
                android:tint="@color/colorPrimaryDark"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/frameNote"
                android:layout_marginRight="65dp"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/forthString"
                android:tint="@color/colorGrayLight"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/frameForthS"
                android:layout_alignStart="@+id/frameForthS"
                android:layout_marginTop="35dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_notification_overlay"
                android:id="@+id/frameSixthS"
                android:tint="@color/colorPrimaryDark"
                android:layout_marginTop="35dp"
                android:layout_toLeftOf="@+id/frameFifthS"
                android:layout_marginRight="22dp"
                android:scaleX="1.5"
                android:scaleY="1.5"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_notification_overlay"
                android:id="@+id/frameFifthS"
                android:tint="@color/colorPrimaryDark"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginTop="35dp"
                android:layout_toLeftOf="@id/frameForthS"
                android:layout_marginRight="22dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/fifthString"
                android:tint="@color/colorGrayLight"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignTop="@+id/frameFifthS"
                android:layout_alignLeft="@+id/frameFifthS"
                android:layout_alignStart="@+id/frameFifthS" />

            <TextView
                android:text="6E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="@color/colorPrimaryDark"
                android:layout_above="@+id/fifthString"
                android:layout_alignLeft="@+id/sixthString"
                android:layout_marginBottom="10dp"
                android:layout_alignStart="@+id/sixthString"
                android:textStyle="normal|bold" />

            <TextView
                android:text="5A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignLeft="@+id/fifthString"
                android:layout_alignStart="@+id/fifthString"
                android:textStyle="normal|bold" />

            <TextView
                android:text="2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignLeft="@+id/secondString"
                android:layout_alignStart="@+id/secondString"
                android:textStyle="normal|bold" />

            <TextView
                android:text="1E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignLeft="@+id/firstString"
                android:layout_alignStart="@+id/firstString"
                android:textStyle="normal|bold" />

            <TextView
                android:text="4D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/frameForthS"
                android:layout_alignStart="@+id/frameForthS"
                android:layout_alignBaseline="@+id/textView6"/>

            <TextView
                android:text="3G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal|bold"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignRight="@+id/frameThirdS"
                android:layout_alignEnd="@+id/frameThirdS" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="60dp"
                app:srcCompat="@android:drawable/checkbox_off_background"
                android:id="@+id/frameNote"
                android:tint="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textFr"
                android:layout_alignStart="@id/frameNote"
                android:layout_marginLeft="22.15dp"
                android:layout_centerVertical="true"
                android:textSize="65sp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/sixthString"
                android:tint="@color/colorGrayLight"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/frameSixthS"
                android:layout_alignStart="@+id/frameSixthS" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_weight="0.48">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/btn_radio_on_focused_holo_light"
                android:id="@+id/frameOK"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/ok"
                android:layout_alignStart="@+id/ok" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/btn_radio_on_holo_light"
                android:id="@+id/ok"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_notification_overlay"
                android:id="@+id/frameSharp"
                android:tint="@color/colorPrimaryDark"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_toRightOf="@id/ok"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_notification_overlay"
                android:id="@+id/frameBemol"
                android:tint="@color/colorPrimaryDark"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/ok"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/bemol"
                android:tint="@color/colorGrayLight"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignTop="@+id/frameBemol"
                android:layout_alignLeft="@+id/frameBemol"
                android:layout_alignStart="@+id/frameBemol"
                android:layout_alignBottom="@+id/frameBemol"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_invisible"
                android:id="@+id/sharp"
                android:tint="@color/colorGrayLight"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignTop="@+id/frameSharp"
                android:layout_alignBottom="@+id/frameSharp"
                android:layout_alignLeft="@+id/frameSharp"
                android:layout_alignStart="@+id/frameSharp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_find_previous_holo_light"
                android:id="@+id/imageView9"
                android:layout_below="@+id/frameOK"
                android:layout_alignLeft="@+id/frameOK"
                android:layout_alignStart="@+id/frameOK" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/new_bemol"
                android:id="@+id/bemolChar"
                android:layout_below="@id/frameBemol"
                android:scaleX="0.7"
                android:scaleY="0.6"
                android:layout_toLeftOf="@+id/centerPoint2"
                android:layout_marginRight="57dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sharp"
                android:id="@+id/sharpChar"
                android:scaleX="0.35"
                android:scaleY="0.45"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/centerPoint2"
                android:layout_marginLeft="58.5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/centerPoint2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:text=" by L.C. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/textView"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="cursive" />
</RelativeLayout>
